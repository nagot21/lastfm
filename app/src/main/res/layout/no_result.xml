<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_result_img"
        android:layout_width="@dimen/marge100"
        android:layout_height="@dimen/marge100"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/marge20"
        android:src="@drawable/no_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_result_img"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size_large"
        android:text="@string/no_results" />

</RelativeLayout>