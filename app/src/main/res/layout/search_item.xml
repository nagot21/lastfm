<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_item_img"
        android:layout_width="@dimen/marge100"
        android:layout_height="@dimen/marge100"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/marge5"
        android:src="@drawable/last_fm_logo" />

    <TextView
        android:id="@+id/search_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_item_img"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/press_search"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size_large" />

</RelativeLayout>