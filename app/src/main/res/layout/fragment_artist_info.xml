<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCrimson">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/artist_info_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/artist_info_collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/ThemeOverlay.AppCompat"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="center|bottom"
            app:expandedTitleMarginBottom="@dimen/marge20"
            app:expandedTitleTextAppearance="@style/ThemeOverlay.AppCompat"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/artist_info_artist_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/marge150"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <View
                android:id="@+id/artist_info_transparency"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/region_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat"
                app:contentInsetStart="@dimen/marge72"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marge10"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/artist_info_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/marge10"
                android:textSize="@dimen/title_text_size_large" />

            <LinearLayout
                android:id="@+id/artist_info_similar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_info_bio"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marge10"
                    android:text="@string/similar_artists" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/artist_info_similar_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/marge40"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/marge10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/artist_info_tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_info_similar_container"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/marge10"
                    android:text="@string/tags" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/artist_info_tags_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/marge40"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/marge10" />

            </LinearLayout>

            <include
                android:id="@+id/artist_info_empty_layout"
                layout="@layout/no_result"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
